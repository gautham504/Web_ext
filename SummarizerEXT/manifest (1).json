{
  "manifest_version": 3,
  "name": "Page Summarizer (VULNERABLE)",
  "version": "1.0.0",
  "description": "Summarize any webpage - DEMO of prompt injection vulnerability",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
